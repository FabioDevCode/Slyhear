<div id="login">
    <div>
        <div id="login_title">
            <img src="/img/logo_sly.svg" alt="Slyhear logo">
            <h1>
                Slyhear
            </h1>
        </div>

        <form id="login_form">
            <div class="form-group">
                <label for="login">
                    Login
                </label>
                <input name="login" type="text" placeholder="Login" maxlength="32">
            </div>

            <div class="form-group">
                <label for="password">
                    Mot de passe
                </label>
                <div class="input-wrapper">
                    <input name="password" type="password" placeholder="Mot de passe" maxlength="32">
                    <button id="toggle-password" type="button">
                        <i class="fas fa-eye pwd-fa-eye"></i>
                        <i class="fas fa-eye-slash pwd-fa-eye-slash none"></i>
                    </button>
                </div>
            </div>

            {{#if firstUser}}
                <input type="hidden" name="firstUser" value="{{firstUser}}">
                <div class="form-group">
                    <label for="confirm_password">
                        Confirmation du mot de passe
                    </label>
                    <input name="confirm_password" type="password" placeholder="Confirmation du mot de passe" maxlength="32">
                </div>

                <button class="btn">
                    Je fais ma première connexion
                </button>
            {{else}}
                <input type="hidden" name="firstUser" value="false">
                <input id="newUser" type="hidden" name="newUser" value="false">

                <div id="newUser_bloc" class="allBtns none">
                    <div class="form-group">
                        <label for="confirm_password">
                            Confirmation du mot de passe
                        </label>
                        <input name="confirm_password" type="password" placeholder="Confirmation du mot de passe" maxlength="32">
                    </div>
                    <button class="btn">
                        Je fais ma première connexion
                    </button>
                    <button id="comeback_co" type="button" class="btn default">
                        Retour
                    </button>
                </div>

                <div id="logIn_bloc" class="allBtns">
                    <button class="btn">
                        Je me connecte
                    </button>
                    <button id="first_co" type="button" class="btn default">
                        Première connexion
                    </button>
                </div>
            {{/if}}

        </form>
    </div>
</div>

<script type="module" src="/js/login.mjs"></script>
